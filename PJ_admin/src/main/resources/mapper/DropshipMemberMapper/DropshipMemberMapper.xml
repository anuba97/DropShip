<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dropship.mapper.DropshipMemberMapper"> 

	<!-- dropship 맴버 리스트 정렬 -->
	<select id="selectMemberList" resultType="kr.co.dropship.vo.DropshipMemberVo">
		SELECT * FROM ( SELECT rownum rnum, a. * FROM
    	( SELECT * FROM member ORDER BY id ) a )
    	WHERE rnum BETWEEN #{startRow} AND #{endRow}
	</select>
	<!-- dropship 맴버 개수 확인 -->
	<select id="selectCount" resultType="int">
		SELECT COUNT(*) count FROM member
	</select>
	<!-- dropship 맴버 1개 정보 가져오기 -->
	<select id="dropship_memberselectOne" resultType="kr.co.dropship.vo.DropshipMemberVo">
		SELECT * FROM member WHERE member_login_id = #{member_login_id}
	</select>
	
</mapper>